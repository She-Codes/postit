<div class="row">
  <div class="col-lg-9">
    <%= render 'shared/content_title', title: 'Dashboard' %>
  </div><!--end .col-lg-9 -->
</div><!-- end .row -->

<div class="row">
  <div class="col-lg-9">
    <%= form_tag '/admin/users', method: 'post' do %>
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Role</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <%= fields_for "users[users_to_update][]", user, {index: user.id} do |f| %>
              <tr>
                <td><%= user.username %></td>
                <td>
                  <%= f.select(:role, [['user', 'user'],
                    ['moderator', 'moderator'], ['admin', 'admin']]) %>
                </td>
            <% end %><!-- end fields_for -->
                <td><%= check_box_tag("users[users_to_delete][]", user.id, false, {id: "check-#{user.id}"}) %></td>
              </tr>
          <% end %><!-- end @users loop -->
        </tbody>
      </table>
      <%= submit_tag "Update" %>
    <% end %>
  </div><!--end .col-lg-9-->
</div><!--end .row-->