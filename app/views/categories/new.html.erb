<%= render 'shared/content_title', title: 'Create A New Category' %>

<%= render 'shared/errors', object: @category %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div><!--end .control-group-->

    <%= f.submit 'Create Category', class: 'btn btn-primary' %>
  <% end %>
</div><!--end .well-->