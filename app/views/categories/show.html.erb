<% header = link_to('All Posts', posts_path) + " &raquo; ".html_safe + icon('paper-plane-o') + "#{@category.name}".html_safe %>

<div class="row cat-header">
  <div class="col-lg-9">
    <%= render 'shared/content_title', title: header %>
  </div>
</div><!-- end .cat-header -->

<% @category.posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>