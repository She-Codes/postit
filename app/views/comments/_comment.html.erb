<% post_title ||= false %>
<div class="row">
  <!-- Voting -->
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br>
      <%= comment.total_votes %>
      <br>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div><!--end .well-->
  <% end %>
  <!-- end Voting-->
  <div class="well span8">
    <em><%= comment.body %></em>
    <% if post_title %>
      on <%= link_to "#{comment.post.title}", post_path(comment.post) %>
    <% end %>
    <br>
    <span class="quiet">by </span><%= link_to comment.creator.username, user_path(comment.creator) %><small> at <%= convert_time(comment.created_at) %></small>
  </div>
</div><!--end .row-->