<% post_title ||= false %>
<div class="row comment-vote-wrapper">
  <div class="col-lg-12">
  <!-- Voting -->
  <% if logged_in? %>
    <div class="votes">
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
        <%= icon('long-arrow-up') %>
      <% end %>
      <span id="comment_<%= comment.id %>_votes"><%= comment.total_votes %></span>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
        <%= icon('long-arrow-down') %>
      <% end %>
    </div><!--end .votes-->
  <% end %>
  <!-- end Voting-->
  <div class="comment">
    <p class="creator"><%= link_to comment.creator.username, user_path(comment.creator) %></p>
    <p><%= display_date_time(comment.created_at) %></p>
    <p class="comment-body">
      <% if post_title %>
        <% if truncate_string(comment.body, 25) %>
          <%= truncate_string(comment.body, 25) + "......" %>
        <% else %>
          "<%= comment.body %>"
        <% end %>
      <% else %>
        "<%= comment.body %>"
      <% end %>
    </p>
    <% if post_title %>
      <p class="comment-post-title">on <%= link_to "#{comment.post.title}", post_path(comment.post) %></p>
    <% end %>
  </div><!-- end .comment -->
  </div><!-- end .col-lg-12-->
</div><!-- end .comment-vote-wrapper -->