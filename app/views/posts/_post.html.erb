<div class="row">
  <div class="span0 well text-center">
    <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br>
    <%= post.total_votes %>
    <br>
    <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div><!--end .well-->
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by <%= link_to post.creator.username, user_path(post.creator) %></span>
      <small>at <%= convert_time(post.created_at) %></small>
      <span><%= link_to( "#{post.comments.size} comments", post_path(post) ) %></span>
    </p>
    <% if logged_in? %>
      <p>(<%= link_to( "edit post", edit_post_path(post) ) %>)</p>
    <% end %>
  </div><!--end .well-->
</div><!--end .row-->